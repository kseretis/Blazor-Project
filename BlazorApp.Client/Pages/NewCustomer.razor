</EditForm>

@code {
    [SupplyParameterFromForm]
    private CustomerDto CustomerDto { get; set; } = new();
    
    private bool Created { get; set; } 
    private bool ErrorOccured { get; set; }
    public string ErrorMessage { get; set; } = string.Empty;
    
    
    private void ToggleAlert()
    {
        Created = !Created;
        // StateHasChanged();
    }
    
    public async void Submit(EditContext editContext)
    {
        try
        {
            var response = await CustomerApiService.AddCustomerAsync(CustomerDto);

            Created = response;
            ErrorOccured = !response;
            }
        catch (Exception ex)
        {
            ErrorOccured = true;
            ErrorMessage = ex.Message;
        }
        StateHasChanged();
    }
}